{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug BiblioFlow API (Docker)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/biblioflow/biblioflow-backend",
      "remoteRoot": "/app",
      "restart": true,
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug Angular Frontend (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/biblioflow/biblioflow-frontend/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*"
      }
    },
    {
      "name": "Debug via Nginx Proxy",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost",
      "webRoot": "${workspaceFolder}/biblioflow/biblioflow-frontend/src"
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack",
      "configurations": [
        "Debug BiblioFlow API (Docker)",
        "Debug Angular Frontend (Chrome)"
      ]
    }
  ]
}
